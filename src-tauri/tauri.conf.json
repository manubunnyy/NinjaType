{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NinjaType",
  "version": "0.1.0",
  "identifier": "com.bunnyy.ninjatype",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "NinjaType",
        "width": 1080,
        "height": 720,
        "resizable": true,
        "transparent": false
      }
    ],
    "security": {
       "capabilities": ["default"],
       "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://fonts.googleapis.com;",
       "freezePrototype": false
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
